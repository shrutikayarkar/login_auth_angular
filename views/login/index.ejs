<link rel="stylesheet" type="text/css" href="/css/login.css">
<div class="container" ng-controller="loginCtrl">
    <div class="row">
        <div ng-show="showPasswordBox" class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <h1 class="text-center login-title">Sign in to continue to Gmail</h1>
            <div class="account-wall">
                
                <p class="profile-name">Username</p>
                <Br />
                <input type="text" ng-model="data.username" class="form-control" placeholder="Username/Email" autofocus>
                    <Br />
                    <Br />
                <button class="btn btn-lg btn-primary btn-block" type="button" ng-click="next()">
                    Next</button>

                <p class="alert alert-danger" ng-show="showMsg">
                    {{ msg }}<a class="close" data-dismiss="alert">x</a>
                </p>
            </div>
        </div>


        <div ng-hide="showPasswordBox" class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <h1 class="text-center login-title">Sign in to continue to Gmail</h1>
            <div class="account-wall">
                <img class="profile-img" src="/user_img/{{ userData.image }}" height="120" width="120" alt="">
                <p class="profile-name" ng-bind="userData.full_name"></p>
                <span class="profile-email" ng-bind="userData.username"></span>
                <input type="password" ng-model="data.password" class="form-control" placeholder="Password" required autofocus>
                <button ng-click="do_login()" class="btn btn-lg btn-primary btn-block" type="button" >
                    Sign in</button>

                <p class="alert alert-danger" ng-show="showMsg">
                    {{ msg }}<a class="close" data-dismiss="alert">x</a>
                </p>    
            </div>
        </div>



    </div>
</div>